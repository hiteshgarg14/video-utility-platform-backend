{
  "extends": ["plugin:prettier/recommended"],
  "globals": {
    "Sortable": true,
    "Promise": true,
    "d3": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "prettier/prettier": "error",
    "no-var": "error",
    "no-unused-vars": "error",
    "prefer-destructuring": [
      "error",
      {
        "array": true,
        "object": true
      },
      {
        "enforceForRenamedProperties": false
      }
    ]
  }
}
